{
  "name": "invoicer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Self-hosted invoicing system with CSV import and glassmorphism UI",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=packages/api && npm run build --workspace=packages/web",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:api": "npm run build --workspace=packages/api",
    "build:web": "npm run build --workspace=packages/web",
    "db:migrate": "npm run db:migrate --workspace=packages/api",
    "db:generate": "npm run db:generate --workspace=packages/api",
    "db:seed": "npm run db:seed --workspace=packages/api",
    "lint": "eslint packages/*/src",
    "typecheck": "npm run build:shared && npm run db:generate && tsc --noEmit -p packages/shared/tsconfig.json && tsc --noEmit -p packages/api/tsconfig.json && tsc --noEmit -p packages/web/tsconfig.json"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^20.0.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.0.0"
  },
  "overrides": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
